@page "/login"
@page "/"
@layout EmptyLayout
@using Shared.DTOs.Auth
@using Client.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="login-container">
    <div class="login-card">
        <h3>🔐 Login</h3>
        
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        <EditForm Model="@loginRequest" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            
            <div class="mb-3">
                <label>Usuário</label>
                <InputText @bind-Value="loginRequest.UserName" class="form-control" />
                <ValidationMessage For="@(() => loginRequest.UserName)" />
            </div>

            <div class="mb-3">
                <label>Senha</label>
                <InputText @bind-Value="loginRequest.Password" type="password" class="form-control" />
                <ValidationMessage For="@(() => loginRequest.Password)" />
            </div>

            <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Carregando...</span>
                }
                else
                {
                    <span>Entrar</span>
                }
            </button>
        </EditForm>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new();
    private string? errorMessage;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var token = await AuthService.Login(loginRequest);

            if (token != null)
            {
                await Task.Delay(100);
                
                var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
                var user = authState.User;

                if (user.IsInRole("Master"))
                {
                    Navigation.NavigateTo("/clinicas", forceLoad: true);
                }
                else if (user.IsInRole("User"))
                {
                    Navigation.NavigateTo("/minhas-clinicas", forceLoad: true);
                }
                else
                {
                    Navigation.NavigateTo("/", forceLoad: true);
                }
            }
            else
            {
                errorMessage = "Usuário ou senha inválidos.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao fazer login: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}