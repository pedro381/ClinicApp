@page "/materiais"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Master")]
@inject NavigationManager Nav

<h3 class="mb-4">Gerenciar Materiais</h3>

<div class="d-flex gap-3 flex-wrap">
    <div class="card p-4 text-center shadow-sm" style="cursor:pointer; width:220px" @onclick='() => GoToCategory("Descartaveis")'>
        <h5>Descartáveis</h5>
        <p>Materiais de uso único</p>
    </div>

    <div class="card p-4 text-center shadow-sm" style="cursor:pointer; width:220px" @onclick='() => GoToCategory("Duraveis")'>
        <h5>Duráveis</h5>
        <p>Itens de longa duração</p>
    </div>

    <div class="card p-4 text-center shadow-sm" style="cursor:pointer; width:220px" @onclick='() => GoToCategory("MateriaisDeUso")'>
        <h5>Materiais de Uso</h5>
        <p>Itens de consumo diário</p>
    </div>
</div>

@code {
    void GoToCategory(string category)
    {
        Nav.NavigateTo($"/materiais/{category}");
    }
}
