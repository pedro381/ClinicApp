@page "/clinicas"
@using Microsoft.AspNetCore.Authorization
@using Shared.DTOs
@attribute [Authorize(Roles = "Master")]
@inject ClinicService ClinicService
@inject IJSRuntime JS

<div class="page-header mb-4">
    <h3>🏥 Manage Clinics</h3>
    <p class="text-muted">Centralized control of inventory and material distribution</p>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (clinics == null)
{
    <p>Loagind...</p>
}
else
{
    <div class="d-flex align-items-center gap-2 mb-3 flex-wrap">
        <span class="fw-semibold">Clinics:</span>
        @foreach (var c in clinics)
        {
            <button class="btn @(selectedClinic?.Id == c.Id ? "btn-primary" : "btn-outline-primary")"
                    @onclick="() => SelectClinic(c)">
                @c.Name
            </button>
        }
    </div>

    <p class="text-muted small">
        Use the <NavLink class="fw-semibold" href="/estoque-geral">General Inventory</NavLink> page to distribute materials between clinics.
    </p>

    @if (selectedClinic == null)
    {
        <p class="text-muted">Select a clinic to view inventory, status, and movements.</p>
    }
    else
    {
        <section class="mt-4">
            <h4>Inventory of @selectedClinic.Name</h4>
            @if (clinicDetails == null)
            {
                <p>Loading details...</p>
            }
            else
            {
                @if (!clinicDetails.Stocks.Any())
                {
                    <p>This clinic does not have any materials yet.</p>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Material</th>
                                <th>Category</th>
                                <th>Quantity</th>
                                <th class="text-center">Open?</th>
                                <th>Since</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in clinicDetails.Stocks)
                            {
                                <tr class="@(s.QuantityAvailable == 1 ? "table-danger" : "")">
                                    <td>@s.MaterialName</td>
                                    <td>@s.Category</td>
                                    <td>@s.QuantityAvailable</td>
                                    <td class="text-center">
                                        @if (s.Category == "UsageMaterials" || s.Category == "Disposables")
                                        {
                                            <input type="checkbox" checked="@s.IsOpen" @onchange="(e) => ToggleOpen(s, e)" />
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (s.IsOpen && s.OpenedAt is not null)
                                        {
                                            @s.OpenedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Latest Movements</h5>
                    @if (clinicDetails.Movements.Any())
                    {
                        <button class="btn btn-sm btn-outline-danger" 
                                title="Limpar log de movimentações"
                                @onclick="ClearMovements">
                            🗑️ Clear Log
                        </button>
                    }
                </div>
                @if (!clinicDetails.Movements.Any())
                {
                    <p>No movements recorded.</p>
                }
                else
                {
                    <ul class="list-unstyled">
                        @foreach (var m in clinicDetails.Movements)
                        {
                            <li>
                                <strong>@m.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss"):</strong>
                                @m.MovementType - @m.Quantity - por @m.PerformedBy
                                @if (!string.IsNullOrWhiteSpace(m.Note))
                                {
                                    <span class="text-muted"> (@m.Note)</span>
                                }
                                <span class="text-primary fw-semibold"> = @m.MaterialName</span>
                            </li>
                        }
                    </ul>
                }
            }
        </section>
    }
}

@code {
    List<ClinicDto>? clinics;
    ClinicDto? selectedClinic;
    ClinicDetailDto? clinicDetails;
    string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        clinics = await ClinicService.GetAll();
    }

    async Task SelectClinic(ClinicDto c)
    {
        selectedClinic = c;
        errorMessage = null;
        clinicDetails = null;
        clinicDetails = await ClinicService.Get(c.Id);
        if (clinicDetails == null)
        {
            errorMessage = "Unable to load details of the selected clinic.";
        }
    }

    async Task ToggleOpen(ClinicStockDto stock, ChangeEventArgs e)
    {
        errorMessage = null;

        if (selectedClinic == null)
            return;

        var isChecked = false;
        if (e.Value is bool b)
        {
            isChecked = b;
        }
        else if (e.Value is string str && bool.TryParse(str, out var parsed))
        {
            isChecked = parsed;
        }

        var response = await ClinicService.SetStockOpen(selectedClinic.Id, stock.MaterialId, isChecked);
        if (!response.IsSuccessStatusCode)
        {
            errorMessage = await response.Content.ReadAsStringAsync();
            return;
        }

        clinicDetails = await ClinicService.Get(selectedClinic.Id);
        if (clinicDetails == null)
        {
            errorMessage = "Unable to update clinic data.";
        }
    }

    async Task ClearMovements()
    {
        errorMessage = null;

        if (selectedClinic == null)
        {
            errorMessage = "Please select a clinic first.";
            return;
        }

        var confirmed = await JS.InvokeAsync<bool>("confirm", 
            "Are you sure you want to clear the entire movement log ? This action cannot be undone.");

        if (!confirmed)
            return;

        var response = await ClinicService.ClearMovements(selectedClinic.Id);

        if (!response.IsSuccessStatusCode)
        {
            var error = await response.Content.ReadAsStringAsync();
            errorMessage = $"Error clearing log: { error}" ;
            return;
        }

        clinicDetails = await ClinicService.Get(selectedClinic.Id);
        if (clinicDetails == null)
        {
            errorMessage = "Unable to update clinic data after clearing the log.";
        }
    }
}

