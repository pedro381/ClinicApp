@page "/clinica/{ClinicIdString}/estoque"
@using Microsoft.AspNetCore.Authorization
@using Shared.DTOs
@using Client.Services
@attribute [Authorize(Roles = "User")]
@inject ClinicService ClinicService
@inject MaterialService MaterialService
@inject IJSRuntime JS

<div class="page-header mb-4">
    <h3>üì¶ Estoque - @(clinicDetails?.Name ?? "Carregando...")</h3>
    <p class="text-muted">Gerencie materiais e movimenta√ß√µes do estoque</p>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}

@if (clinicDetails == null)
{
    <p>Carregando...</p>
}
else
{
    <div class="mb-3">
        <a href="/minhas-clinicas" class="btn btn-secondary">‚Üê Voltar</a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">üì¶ Atribuir Material do Estoque Geral</h5>
        </div>
        <div class="card-body">
            @if (generalStock == null)
            {
                <p>Carregando estoque geral...</p>
            }
            else if (!generalStock.Any())
            {
                <p class="text-muted">Nenhum material dispon√≠vel no estoque geral.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Material</th>
                                <th>Categoria</th>
                                <th class="text-center">Dispon√≠vel no Estoque Geral</th>
                                <th class="text-end">A√ß√£o</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var material in generalStock.Where(m => m.Quantity > 0))
                            {
                                <tr>
                                    <td>@material.Name</td>
                                    <td>@material.Category</td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@material.Quantity</span>
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-success"
                                                title="Atribuir material do estoque geral para esta cl√≠nica"
                                                @onclick="() => AllocateMaterial(material)">
                                            ‚ûï Atribuir
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <h5>Estoque da Cl√≠nica</h5>
    @if (!clinicDetails.Stocks.Any())
    {
        <p>Esta cl√≠nica n√£o possui materiais no estoque.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Material</th>
                    <th>Categoria</th>
                    <th class="text-center">Quantidade Dispon√≠vel</th>
                    <th class="text-center">Aberto</th>
                    <th class="text-center">Aberto Desde</th>
                    <th class="text-end">A√ß√µes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stock in clinicDetails.Stocks)
                {
                    <tr>
                        <td>@stock.MaterialName</td>
                        <td>@stock.Category</td>
                        <td class="text-center">@stock.QuantityAvailable</td>
                        <td class="text-center">
                            @if (stock.Category == "MateriaisDeUso" || stock.Category == "Descartaveis")
                            {
                                <div class="form-check form-switch d-inline-block">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           checked="@stock.IsOpen" 
                                           @onchange="(e) => ToggleOpen(stock, e)"
                                           title="@(stock.IsOpen ? "Marcado como aberto" : "Marcar como aberto")" />
                                    <label class="form-check-label ms-2">
                                        @if (stock.IsOpen)
                                        {
                                            <span class="badge bg-success">Aberto</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Fechado</span>
                                        }
                                    </label>
                                </div>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (stock.IsOpen && stock.OpenedAt is not null)
                            {
                                @stock.OpenedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-danger"
                                    disabled="@(stock.QuantityAvailable <= 0)"
                                    title="Consumir material do estoque"
                                    @onclick="() => ConsumeMaterial(stock)">
                                Consumir
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h5 class="mb-0">√öltimas Movimenta√ß√µes</h5>
        @if (clinicDetails.Movements.Any())
        {
            <button class="btn btn-sm btn-outline-danger" 
                    title="Limpar log de movimenta√ß√µes"
                    @onclick="ClearMovements">
                üóëÔ∏è Limpar Log
            </button>
        }
    </div>
    @if (!clinicDetails.Movements.Any())
    {
        <p>Nenhuma movimenta√ß√£o registrada.</p>
    }
    else
    {
        <ul class="list-unstyled">
            @foreach (var movement in clinicDetails.Movements.Take(20))
            {
                <li>
                    <strong>@movement.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss"):</strong>
                    @movement.MovementType - @movement.Quantity - por @movement.PerformedBy
                    @if (!string.IsNullOrWhiteSpace(movement.Note))
                    {
                        <span class="text-muted"> (@movement.Note)</span>
                    }
                    <span class="text-primary fw-semibold"> = @movement.MaterialName</span>
                </li>
            }
        </ul>
    }
}

@code {
    [Parameter] public string ClinicIdString { get; set; } = string.Empty;
    private Guid ClinicId => Guid.TryParse(ClinicIdString, out var id) ? id : Guid.Empty;
    ClinicDetailDto? clinicDetails;
    List<MaterialDto>? generalStock;
    string? errorMessage;
    string? successMessage;

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrWhiteSpace(ClinicIdString) && Guid.TryParse(ClinicIdString, out _))
        {
            await LoadClinicDetails();
            await LoadGeneralStock();
        }
        else if (!string.IsNullOrWhiteSpace(ClinicIdString))
        {
            errorMessage = "ID da cl√≠nica inv√°lido.";
        }
    }

    async Task LoadGeneralStock()
    {
        try
        {
            generalStock = await MaterialService.GetAll();
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar estoque geral: {ex.Message}";
        }
    }

    async Task LoadClinicDetails()
    {
        try
        {
            if (!Guid.TryParse(ClinicIdString, out var clinicId) || clinicId == Guid.Empty)
            {
                errorMessage = "ID da cl√≠nica inv√°lido.";
                return;
            }

            clinicDetails = await ClinicService.Get(clinicId);
            if (clinicDetails == null)
            {
                errorMessage = "Cl√≠nica n√£o encontrada.";
            }
            else
            {
                errorMessage = null;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar detalhes da cl√≠nica: {ex.Message}";
            clinicDetails = null;
        }
    }

    async Task ConsumeMaterial(ClinicStockDto stock)
    {
        errorMessage = null;
        successMessage = null;

        if (stock.QuantityAvailable <= 0)
        {
            errorMessage = "N√£o h√° quantidade dispon√≠vel para consumir.";
            return;
        }

        var input = await JS.InvokeAsync<string?>("prompt", 
            $"Quantidade de '{stock.MaterialName}' para consumir (m√°ximo: {stock.QuantityAvailable})", 
            "1");

        if (string.IsNullOrWhiteSpace(input))
            return;

        if (!int.TryParse(input, out var quantity) || quantity <= 0)
        {
            errorMessage = "Informe uma quantidade v√°lida.";
            return;
        }

        if (quantity > stock.QuantityAvailable)
        {
            errorMessage = $"Quantidade solicitada ({quantity}) √© maior que a dispon√≠vel ({stock.QuantityAvailable}).";
            return;
        }

        if (!Guid.TryParse(ClinicIdString, out var clinicId))
        {
            errorMessage = "ID da cl√≠nica inv√°lido.";
            return;
        }

        var response = await ClinicService.ConsumeMaterial(clinicId, new ClinicConsumeRequest(stock.MaterialId, quantity));

        if (!response.IsSuccessStatusCode)
        {
            var error = await response.Content.ReadAsStringAsync();
            errorMessage = $"Erro ao consumir material: {error}";
            return;
        }

        successMessage = $"Material consumido com sucesso! Quantidade restante atualizada.";
        await LoadClinicDetails();
        await LoadGeneralStock();
    }

    async Task AllocateMaterial(MaterialDto material)
    {
        errorMessage = null;
        successMessage = null;

        if (material.Quantity <= 0)
        {
            errorMessage = "N√£o h√° quantidade dispon√≠vel no estoque geral.";
            return;
        }

        if (!Guid.TryParse(ClinicIdString, out var clinicId))
        {
            errorMessage = "ID da cl√≠nica inv√°lido.";
            return;
        }

        var input = await JS.InvokeAsync<string?>("prompt", 
            $"Quantidade de '{material.Name}' para atribuir √† cl√≠nica (m√°ximo dispon√≠vel: {material.Quantity})", 
            "1");

        if (string.IsNullOrWhiteSpace(input))
            return;

        if (!int.TryParse(input, out var quantity) || quantity <= 0)
        {
            errorMessage = "Informe uma quantidade v√°lida.";
            return;
        }

        if (quantity > material.Quantity)
        {
            errorMessage = $"Quantidade solicitada ({quantity}) √© maior que a dispon√≠vel no estoque geral ({material.Quantity}).";
            return;
        }

        var response = await ClinicService.Allocate(clinicId, new ClinicAllocateRequest(material.Id, quantity));

        if (!response.IsSuccessStatusCode)
        {
            var error = await response.Content.ReadAsStringAsync();
            errorMessage = $"Erro ao atribuir material: {error}";
            return;
        }

        successMessage = $"Material atribu√≠do com sucesso! {quantity} unidade(s) de '{material.Name}' foram adicionadas ao estoque da cl√≠nica.";
        await LoadClinicDetails();
        await LoadGeneralStock();
    }

    async Task ToggleOpen(ClinicStockDto stock, ChangeEventArgs e)
    {
        errorMessage = null;
        successMessage = null;

        if (stock.Category != "MateriaisDeUso" && stock.Category != "Descartaveis")
        {
            errorMessage = "Apenas materiais de uso e descart√°veis podem ser marcados como abertos.";
            return;
        }

        if (!Guid.TryParse(ClinicIdString, out var clinicId))
        {
            errorMessage = "ID da cl√≠nica inv√°lido.";
            return;
        }

        var isChecked = false;
        if (e.Value is bool b)
        {
            isChecked = b;
        }
        else if (e.Value is string str && bool.TryParse(str, out var parsed))
        {
            isChecked = parsed;
        }

        var response = await ClinicService.SetStockOpen(clinicId, stock.MaterialId, isChecked);

        if (!response.IsSuccessStatusCode)
        {
            var error = await response.Content.ReadAsStringAsync();
            errorMessage = $"Erro ao alterar status do material: {error}";
            // Reverter o checkbox
            await LoadClinicDetails();
            return;
        }

        successMessage = $"Material marcado como {(isChecked ? "aberto" : "fechado")} com sucesso!";
        await LoadClinicDetails();
    }

    async Task ClearMovements()
    {
        errorMessage = null;
        successMessage = null;

        var confirmed = await JS.InvokeAsync<bool>("confirm", 
            "Tem certeza que deseja limpar todo o log de movimenta√ß√µes? Esta a√ß√£o n√£o pode ser desfeita.");

        if (!confirmed)
            return;

        if (!Guid.TryParse(ClinicIdString, out var clinicId))
        {
            errorMessage = "ID da cl√≠nica inv√°lido.";
            return;
        }

        var response = await ClinicService.ClearMovements(clinicId);

        if (!response.IsSuccessStatusCode)
        {
            var error = await response.Content.ReadAsStringAsync();
            errorMessage = $"Erro ao limpar log: {error}";
            return;
        }

        successMessage = "Log de movimenta√ß√µes limpo com sucesso!";
        await LoadClinicDetails();
    }
}

