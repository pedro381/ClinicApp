@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject Client.Services.AuthService AuthService

<div class="p-3 bg-primary text-white">
    <h3>Área do Auxiliar</h3>
</div>

<AuthorizeView Roles="Auxiliar">
    <Authorized>
        <div class="p-3">
            <ul>
                <li><a href="/materiais-consumo">Registrar Consumo</a></li>
                <li><a href="/estoque">Ver Estoque</a></li>
            </ul>
            <button @onclick="Logout">Sair</button>

            <div class="mt-2">
                @Body
            </div>
        </div>
    </Authorized>

    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>

@code {
    async Task Logout()
    {
        await AuthService.Logout();
        Nav.NavigateTo("/login");
    }
}
