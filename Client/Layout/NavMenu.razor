@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <strong>🦷 ALPHA DENTAL</strong>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="nav-menu">
    <ul>
        <li><NavLink href="/home" Match="NavLinkMatch.All">🏠 Home</NavLink></li>

        <AuthorizeView Roles="Master">
            <Authorized>
                <li><NavLink href="/clinicas">🏥 Clinics</NavLink></li>
                <li><NavLink href="/estoque-geral">📊 General Inventory</NavLink></li>
                <li><NavLink href="/materiais">📦 Consumable Materials</NavLink></li>
                <li><NavLink href="/funcionarios">👥 HR - Employees</NavLink></li>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="User">
            <Authorized>
                <li><NavLink href="/minhas-clinicas">🏥 My Clinics</NavLink></li>
                <li><NavLink href="/materiais">📦 Consumable Materials</NavLink></li>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <li><a href="" @onclick="Logout">🚪 Logout</a></li>
            </Authorized>
            <NotAuthorized>
                <li><NavLink href="/login">🔐 Login</NavLink></li>
            </NotAuthorized>
        </AuthorizeView>
    </ul>
    
    <!-- Logo no rodapé -->
    <div class="nav-footer">
        <img src="/imagens/LogoNav.png" alt="Alpha Dental Logo" class="nav-logo" />
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task Logout()
    {
        // remove token e atualiza estado
        await (AuthStateProvider as Client.Auth.CustomAuthStateProvider)!.LogoutAsync();
    }
}
